<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dots.adrianhsu.bioexp">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission
        android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:label="@string/main_title"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BtlistActivity"
            android:label="@string/btlist_title"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ShowChartActivity"
            android:label="@string/show_chart_title"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WeightActivity"
            android:label="@string/show_chart_weight"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".OxygenActivity"
            android:label="@string/show_chart_oxygen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BPMActivity"
            android:label="@string/show_chart_bpm"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/show_splash"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>